{
  "compilerOptions": {
    "esModuleInterop": true,
    "typeRoots": [ "node_modules/@types" ],
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "target": "ES6",
    "module": "ES6",
    "outDir": "dist",
    "lib": [ "ES6", "DOM"],
    "downlevelIteration": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [ "node_modules", "dist" ]
}
