{
  "compilerOptions": {
    "esModuleInterop": true,
    "typeRoots": [ "./types", "node_modules/@types" ],
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "rootDirs": [ "src" ],
    "baseUrl": "src",
    "lib": [ "dom", "es6" ],
    "downlevelIteration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [ "node_modules" ]
}
